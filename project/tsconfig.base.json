{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@project/shared-config/accounts": [
        "libs/shared-config/accounts/src/index.ts"
      ],
      "@project/shared-config/auth": ["libs/shared-config/auth/src/index.ts"],
      "@project/shared-config/notify": [
        "libs/shared-config/notify/src/index.ts"
      ],
      "@project/shared-config/posts": ["libs/shared-config/posts/src/index.ts"],
      "@project/shared-core": ["libs/shared-core/src/index.ts"],
      "@project/shared-dtos": ["libs/shared-dtos/src/index.ts"],
      "@project/shared-types": ["libs/shared-types/src/index.ts"],
      "@project/shared-utils": ["libs/shared-utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
